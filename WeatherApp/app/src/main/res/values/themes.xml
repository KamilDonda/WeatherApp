<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/start_0</item>
        <item name="android:navigationBarColor">@color/end_0</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <!-- SearchView -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryHint">@string/search</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">@dimen/city_font</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="AppSearchViewSenior" parent="AppSearchView" >
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
</resources>